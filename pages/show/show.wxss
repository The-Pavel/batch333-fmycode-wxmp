/* pages/show/show.wxss */
.card {
  text-align: center;
  margin: 5vh 10vw;
  padding: 5vh 10vw;
  box-shadow: 1px 2px 30px lightgray;
}

.comment-card {
  margin: 2vh 5vw;
  padding: 3vh 5vw;
  box-shadow: 1px 2px 30px lightgray;
}

.title {
  font-size: 30rpx;
  font-weight: 500;
  padding-bottom: 50rpx;
}

.text {
  background-color: dodgerblue;
  color: white;
  padding: 20rpx 30rpx;
}

.comment-date {
  text-align: right;
  font-size: 20rpx;
  color: grey;
}

.comment-content {
  margin-top: 20rpx;
  text-align: left;
}